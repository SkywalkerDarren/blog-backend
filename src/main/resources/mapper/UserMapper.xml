<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.dao.UserDao">
    <!--
        返回结果映射
        如果开启驼峰命名转换且命名规范该段代码可以不写
        因为配置别名 所以type属性使用的是mybatis-conf中的别名
        -->
    <resultMap type="User" id="user">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="grant" column="grant"/>
    </resultMap>
    <!--  定义字段集合 -->
    <sql id="findAllColumn">
        select * from user
    </sql>
    <!-- 接口中具体实现-->
    <select id="findAllUser" resultMap="user">
        <include refid="findAllColumn"/>
    </select>

    <select id="findUserById" parameterType="int" resultMap="user">
        <include refid="findAllColumn"/> where id=#{id}
    </select>

    <select id="findUserByUsername" parameterType="String" resultMap="user">
        <include refid="findAllColumn"/> where username=#{username}
    </select>

    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>

    <update id="updateUser" parameterType="User">
        update user set username=#{username},password=#{password},`grant`=#{grant} where id=#{id}
    </update>

    <insert id="saveUser" parameterType="User">
        insert into user (username, password, `grant`) VALUES (#{username},#{password},#{grant})
    </insert>
</mapper>